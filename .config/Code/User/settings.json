{
  // files
  "files.autoSave": "onFocusChange",
  "files.associations": {
    "*.frag": "glsl",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.ejs": "html",
    "*.css": "tailwindcss"
  },
  "files.eol": "\n",
  "files.simpleDialog.enable": true,
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/package.json": true
  },
  // font
  "editor.fontFamily": "'Iosevka Nerd Font', 'CaskaydiaCove NF', monospace",
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.fontSize": 20,
  "editor.glyphMargin": true,
  "editor.inlayHints.fontSize": 16,
  "editor.suggestFontSize": 16,
  "editor.inlayHints.padding": true,
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontFamily": "'Iosevka Nerd Font', 'CaskaydiaCove NF', '黑体', monospace",
  "terminal.integrated.fontWeight": "400",
  // terminal
  "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\wsl.exe",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.scrollback": 2500,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    }
  },
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.stickyScroll.maxLineCount": 2,
  // editor
  "editor.parameterHints.enabled": true,
  "editor.multiCursorModifier": "alt",
  "editor.cursorSurroundingLines": 16,
  "editor.cursorBlinking": "solid",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.lineNumbers": "relative",
  "editor.insertSpaces": true,
  "editor.tabCompletion": "on",
  "editor.suggest.preview": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.insertMode": "insert",
  "editor.smoothScrolling": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.linkedEditing": true,
  "editor.rulers": [
    {
      "column": 72,
      "color": "#F55D3E20"
    },
    {
      "column": 80,
      "color": "#F55D3E50"
    },
  ],
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.unfoldOnClickAfterEndOfLine": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "envKeys",
        "scope": "string.quoted.single.ini,constant.numeric.ini,string.quoted.double.ini",
        "settings": {
          "foreground": "#19354900"
        }
      }
    ]
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "zenMode.hideLineNumbers": false,
  "editor.mouseWheelZoom": true,
  // windows
  "window.dialogStyle": "custom",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": true,
  "window.customMenuBarAltFocus": false,
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "window.zoomLevel": 1,
  // workbench
  "workbench.tree.indent": 16,
  "workbench.tree.enableStickyScroll": true,
  "workbench.editor.tabActionLocation": "left",
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.colorCustomizations": {
    "editorSuggestWidget.selectedBackground": "#3066BE",
    "editorCursor.foreground": "#F55D3E",
    "editorCursor.background": "#000",
    "menu.selectionBackground": "#3066BE",
    "list.activeSelectionBackground": "#3066BE"
  },
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.activityBar.location": "top",
  // misc
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
  },
  "settingsSync.keybindingsPerPlatform": false,
  // live preview
  "livePreview.customExternalBrowser": "Chrome",
  "livePreview.openPreviewTarget": "External Browser",
  "livePreview.autoRefreshPreview": "Never",
  "livePreview.previewDebounceDelay": 2000,
  // errorLens
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "eslint"
  ],
  // vscodevim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.inccommand": "append",
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.camelCaseMotion.enable": true,
  "vim.showMarksInGutter": true,
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.startofline": true,
  "vim.foldfix": true,
  "vim.leader": "<space>",
  "vim.targets.enable": true,
  "vim.handleKeys": {
    "<C-q>": false,
    "<C-k>": false,
    "<C-p>": false,
    "<C-f>": false,
    "<C-b>": false,
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "J",
      ],
      "after": [
        "m",
        "z",
        "J",
        "`",
        "z",
      ]
    },
    {
      "before": [
        "n",
      ],
      "after": [
        "n",
        "z",
        "z",
      ]
    },
    {
      "before": [
        "N",
      ],
      "after": [
        "N",
        "z",
        "z",
      ]
    },
    // window
    {
      "before": [
        "s",
        "s",
      ],
      "after": [
        "<C-w>",
        "s",
      ]
    },
    {
      "before": [
        "s",
        "v",
      ],
      "after": [
        "<C-w>",
        "v",
      ]
    },
    {
      "before": [
        "s",
        "h",
      ],
      "after": [
        "<C-w>",
        "h",
      ]
    },
    {
      "before": [
        "s",
        "l",
      ],
      "after": [
        "<C-w>",
        "l",
      ]
    },
    {
      "before": [
        "s",
        "j",
      ],
      "after": [
        "<C-w>",
        "j",
      ]
    },
    {
      "before": [
        "s",
        "k",
      ],
      "after": [
        "<C-w>",
        "k",
      ]
    },
    {
      "before": [
        "+",
      ],
      "after": [
        "<C-a>",
      ]
    },
    {
      "before": [
        "-",
      ],
      "after": [
        "<C-x>",
      ]
    },
    {
      "before": [
        "H",
      ],
      "after": [
        "^",
      ]
    },
    {
      "before": [
        "L",
      ],
      "after": [
        "$",
      ]
    },
    {
      "before": [
        "<C-u>",
      ],
      "after": [
        "H",
        "z",
        "z",
      ]
    },
    {
      "before": [
        "<C-d>",
      ],
      "after": [
        "L",
        "z",
        "z",
      ]
    },
  ],
  "vim.normalModeKeyBindings": [
    // search
    {
      "before": [
        "<leader>",
        "s",
      ],
      "commands": [
        "workbench.action.experimental.quickTextSearch"
      ]
    },
    {
      "before": [
        "<leader>",
        "<S-s>",
      ],
      "commands": [
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": [
        "g",
        "w",
      ],
      "after": [
        "*",
        "N",
      ]
    },
    {
      "before": [
        "<leader>",
        "o",
      ],
      "commands": [
        "workbench.action.openRecent"
      ]
    },
    {
      "before": [
        "]",
        "e"
      ],
      "commands": [
        "editor.action.marker.nextInFiles"
      ]
    },
    {
      "before": [
        "[",
        "e"
      ],
      "commands": [
        "editor.action.marker.prevInFiles"
      ]
    },
    {
      "before": [
        "<Esc>"
      ],
      "commands": [
        ":nohl"
      ],
      "silent": true,
    },
    {
      "before": [
        "<C-w>",
      ],
      "commands": [
        "workbench.action.files.save",
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    {
      "before": [
        "g",
        "o"
      ],
      "commands": [
        {
          "command": "workbench.action.quickOpen",
          "args": "@:"
        }
      ],
    },
    {
      "before": [
        "g",
        "<S-o>"
      ],
      "commands": [
        "workbench.action.showAllSymbols"
      ],
    },
    {
      "before": [
        "<leader>",
        "r"
      ],
      "commands": [
        "abracadabra.renameSymbol"
      ]
    },
    // better delete
    {
      "before": [
        "<leader>",
        "d",
      ],
      "after": [
        "\"",
        "_",
        "d",
      ]
    },
    {
      "before": [
        "<leader>",
        "g",
      ],
      "commands": [
        "gitlens.showGraphPage"
      ],
    },
    {
      "before": [
        "<leader>",
        "l",
      ],
      "commands": [
        "workbench.action.closeOtherEditors"
      ],
    },
    {
      "before": [
        "<leader>",
        "p",
      ],
      "commands": [
        {
          "command": "workbench.action.quickOpen",
          "args": ">git.pullRebase"
        }
      ],
    },
    {
      "before": [
        "<leader>",
        "m",
      ],
      "commands": [
        "workbench.action.moveEditorToNewWindow",
      ],
    },
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "after": [
        "<C-o>",
        "c",
        "w"
      ]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": [
        "L"
      ],
      "after": [
        "$"
      ]
    },
    {
      "before": [
        "H"
      ],
      "after": [
        "^"
      ]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "L"
      ],
      "after": [
        "$"
      ]
    },
    {
      "before": [
        "H"
      ],
      "after": [
        "^"
      ]
    },
    // better paste and yank
    {
      "before": [
        "y",
      ],
      "after": [
        "y",
        "g",
        "v",
        "<Esc>",
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "\"",
        "_",
        "d",
        "P",
      ]
    },
    // better indent
    {
      "before": [
        ">",
      ],
      "after": [
        ">",
        "g",
        "v",
      ]
    },
    {
      "before": [
        "<",
      ],
      "after": [
        "<",
        "g",
        "v",
      ]
    },
    // better delete
    {
      "before": [
        "<leader>",
        "d",
      ],
      "after": [
        "\"",
        "_",
        "d",
      ]
    },
    {
      "before": [
        "g",
        "s",
      ],
      "commands": [
        "codesnap-plus.start"
      ]
    },
    {
      "before": [
        "<leader>",
        "s",
      ],
      "commands": [
        "workbench.action.experimental.quickTextSearch"
      ]
    },
    {
      "before": [
        "<leader>",
        "<S-s>",
      ],
      "commands": [
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": [
        "a",
        "i"
      ],
      "after": [
        "a",
        "I"
      ]
    },
  ],
  // git
  "git.autofetch": true,
  "git.mergeEditor": true,
  "git.terminalGitEditor": true,
  "git.rebaseWhenSync": true,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.graph.layout": "editor",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches"
  ],
  "gitlens.rebaseEditor.ordering": "asc",
  "gitlens.views.worktrees.files.layout": "list",
  "gitlens.ai.experimental.provider": "openai",
  "gitlens.ai.experimental.openai.model": "gpt-4-1106-preview",
  // language
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.organizeImports": "explicit"
  },
  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "explicit"
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}